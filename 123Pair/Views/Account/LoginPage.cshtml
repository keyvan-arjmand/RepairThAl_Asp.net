@{
    ViewData["Title"] = "درباره ی ما";
}

<div style="display:flex;justify-content:center;align-content:center">

    <!-- Pills content -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <form>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="loginName" class="form-control" placeholder="شماره تلفن یا ایمیل" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="loginPassword" class="form-control" placeholder="رمز عبور" />
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                            <label class="form-check-label" for="loginCheck">منو به خاطر داشته باش</label>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a href="#!">فراموشی رمز عبور?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">ورود</button>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>حساب کاربری نداری? <a href="@Url.Action("SignUpPage","Account")">ثبت نام</a></p>
                </div>
            </form>
        </div>

    </div>
</div>
